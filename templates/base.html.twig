<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    {% block stylesheets %}
        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css">
        <!-- link qui permet d'intégrer a mon HTML des icons font awesome qui est présent à partir de la version 4.0.0 de Bootstrap -->
        <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.7.0/css/all.css">
        <link rel="stylesheet" href="{{ asset('css/style.css') }}">
        {{ encore_entry_link_tags('app') }}
    {% endblock %}

    <title>Page de connexion</title>
    <!-- script pour les animations AOS -->
    {% block javascripts %}
        <script src="https://unpkg.com/aos@2.3.1/dist/aos.js"></script>
        <!-- script pour les animations javascript -->
        <script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.4/jquery.min.js"></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js"></script>
        <!-- script pour Bootstrap -->
        <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js"></script>
        <script type="text/javascript" src="script.js"></script>
        <!-- script pour le reCaptcha -->
        <script src="https://www.google.com/recaptcha/api.js" async defer></script>
        <!-- c'est un autre script pour les animations AOS -->
        <script>
            AOS.init();
        </script>
        {{ encore_entry_script_tags('app') }}
    {% endblock %}
</head>

<header>
    <!-- Cette partie gère une barre de navigation -->
    <nav class="navbar navbar-expand-md navbar-custom">
        <div class="container-fluid">
            <button class="logosite">LOGO</button>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
					<span class="navbar-toggler-icon">
						<i class="fas fa-bars" style="color:#fff; font-size:28px;"></i>
					</span>
            </button>

            <div class="collapse navbar-collapse" id="navbarNavDropdown">
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('login') }}">ACCUEIL</a>
                    </li>
                    {% if is_granted('ROLE_OWNER') or is_granted('ROLE_REPRESENTATIVE')%}
                    <li class="nav-item">
                        <a class="nav-link" href="">BIENS</a>
                    </li>
                    {% endif %}
                    {% if is_granted('ROLE_OWNER') or is_granted('ROLE_TENANT') or is_granted('ROLE_REPRESENTATIVE') %}
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('tenant_management') }}">LOCATAIRES</a>
                    </li>
                    {% endif %}
                    {% if is_granted('ROLE_OWNER') %}
                    <li class="nav-item">
                        <a class="nav-link" href="">MANDATAIRES</a>
                    </li>
                    {% endif %}
                </ul>
                <!-- C'est une autre liste désordonnée qui permet de placer la catégorie "CONTACT" sur la droite, elle a été faite avec un "DROPDOWN"-->
                <ul class="nav navbar-nav ml-auto">
                    <li class="nav-item dropdown">
                    {% if app.user %}
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('profil') }}">Mon profil

                            <i class="fas fa-user-circle"></i>
                        </a>
                    </li>
                    {% endif %}
                </ul>
            </div>
        </div>
    </nav>
</header>
<body>
{% block body %}
{% endblock %}
</body>
<footer id="colophon" class="site-footer" style="background-color: #212121;">
    <!-- Grid container -->
    <div class="container p-4">
        <!--Grid row-->
        <div class="row">
            <!--Grid column-->
            <div class="col-md-4">
                <h6 class="text">Gestion locative</h6>

                <h6 class="text">Contact téléphone : 06 06 06 06 06</h6>
                <h6 class="text">Contact email : contact@gestionlocative.fr</h6>

            </div>
            <!--Grid column-->
            <div class="col-md-4">
                <p></p>
            </div>
            <!--Grid column-->
            <div class="col-md-4">
                <h6 class="text">Version 1.0</h6>
            </div>
            <!--Grid column-->
        </div>
        <!--Grid row-->
    </div>
    <!-- Grid container -->
</footer>
</html>