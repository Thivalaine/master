{% extends 'base.html.twig' %}

{% form_theme form 'bootstrap_5_layout.html.twig' %}

{% block body %}
    <h1>Inscription</h1>

    {{ form_start(form) }}

    {{ form_row(form.firstname, {'label': 'Prénom', 'attr': {'placeholder': 'Prénom'}}) }}
    {{ form_row(form.lastname, {'label': 'Nom', 'attr': {'placeholder': 'Nom'}}) }}
    {{ form_row(form.email, {'label': 'Adresse e-mail', 'attr': {'placeholder': 'Adresse e-mail'}}) }}
    {{ form_row(form.password, {'label': 'Mot de passe', 'attr': {'placeholder': 'Mot de passe'}}) }}
    {{ form_row(form.confirm_password, {'label': 'Confirmation de votre mot de passe', 'attr': {'placeholder': 'Répétez votre mot de passe ...'}}) }}
    {{ form_row(form.is_verified, {'label': ''}) }}
    {{ form_row(form.role, {'label': 'Rôle', 'attr': {'class': 'form-control'}}) }}

    <button type="submit" class="btn btn-success">Inscription</button>
    {{ form_end(form) }}
{% endblock %}