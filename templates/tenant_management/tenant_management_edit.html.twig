{% extends 'base.html.twig' %}
{% block body %}
    <div class="container">
        <div class="row">
            <div class="col-sm">
                <h1 style="margin-left: 13%;">{{ user.firstname }} {{ user.lastname }}</h1>
                {{ form_start(formUser) }}

                {{ form_row(formUser.firstname, {'label': 'Prénom*', 'attr': {'placeholder': 'Prénom'}}) }}
                {{ form_row(formUser.lastname, {'label': 'Nom*', 'attr': {'placeholder': 'Nom'}}) }}
                {{ form_row(formUser.email, {'label': 'Adresse e-mail*', 'attr': {'placeholder': 'Adresse e-mail'}}) }}
                {{ form_row(formUser.password, {'label': 'Mot de passe', 'attr': {'placeholder': 'Mot de passe'}}) }}
                {{ form_row(formUser.confirm_password, {'label': 'Confirmer votre mot de passe', 'attr': {'placeholder': 'Confirmer votre mot de passe'}}) }}
                <button type="submit" class="btn btn-success">Mettre à jour</button>
                {{ form_end(formUser) }}
            </div>
            <div class="col-sm">
                One of three columns
            </div>
            <div class="col-sm">
                <h1>Liste des locations</h1>
            </div>
        </div>
    </div>


{% endblock %}