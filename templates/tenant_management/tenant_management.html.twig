{% extends 'base.html.twig' %}

{% block body %}
    <h3 class="titreG">Gestion des locataires</h3>
    <button onclick="window.location.href='{{ path('tenant_management_add') }}'" class="btn btn-success" style="float:left; margin-top: 2.5%; margin-left: 2%;">Nouveau locataire</button>
    <div class="divG">
        <table class="table">
            <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Nom</th>
                <th scope="col">Prénom</th>
                <th scope="col">Nombre de locations</th>
                <th scope="col">Action</th>
            </tr>
            </thead>
            <tbody>
            {% for user in users %}
                <!-- Ici on ne prend en compte que les utilisateurs ayant pour rôle "Locataire" -->
                {% if  user.role == 'ROLE_TENANT' %}
                    <tr>
                        <th scope="row">{{ user.id }}</th>
                        <td>{{ user.firstname }}</td>
                        <td>{{ user.lastname }}</td>
                        <td>@mdo</td>
                        <td><button onclick="window.location.href='{{ path('tenant_management_edit', {'id': user.id}) }}'" class="btn btn-secondary">Mettre à jour les données</button></td>
                    </tr>
                {% endif %}
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}